<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://upload.wikimedia.org/wikipedia/commons/d/d6/Place_de_la_Bourse%2C_Bordeaux%2C_France.jpg)">
  <h2>Voilà ton Dashboard <i class="far fa-hand-point-down"></i></h2>
</div>
<div class="cards">
  <div class="card-reservation">
   <h3>Créer une offre</h3>
    <%= render "/shared/form", transport: @transport %>
  </div>
  <div class="card-reservation" >
    <h3>Mes transports en location</h3>
    <ul>
      <% @owner_transports.each do |owner_transport| %>
        <li><%= owner_transport.transport_type %>
        <%= link_to owner_transport_path(owner_transport),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="card-reservation">
    <h3>Mes location en cours</h3>
    <a class="btn-reservation" href="reservation">Mes locations</a>
  </div>
</div>
